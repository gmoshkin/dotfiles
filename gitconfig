# put this in the $HOME/.gitconfig file
[user]
	email = gmoshkin@picodata.io
	name = Georgy Moshkin
[alias]
	a			= add
	b			= branch
	c			= commit
	ca			= commit --amend
	co			= checkout
	curbranch	= rev-parse --abbrev-ref HEAD
	cb	        = rev-parse --abbrev-ref HEAD
	curhash		= rev-parse --verify HEAD
	cp	        = cherry-pick
	d			= diff
	dc			= diff --cached
	f			= fetch
	p			= pull
	pr			= pull --rebase
	pu			= push
	s			= status
	ss			= stash save
	sp			= stash pop
	sh			= show
	stashpull	= !"git stash && git pull && git stash pop"
	r			= rebase
	ri			= rebase --interactive
	rc			= rebase --continue
	ra			= rebase --abort
	lg			= log --graph
	logg		= log --graph
	l1			= log --oneline
	log1		= log --oneline
	l1g			= log --oneline --graph
	log1g		= log --oneline --graph
	lg1			= log --graph --oneline
	logg1		= log --graph --oneline
	lt			= log -1
	last		= log -1
	lgp			= log --graph --pretty='%Cgreen%ar%Creset %Cblue%h%Creset (%Cred%an%Creset) %s'
	loggp		= log --graph --pretty='%Cgreen%ar%Creset %Cblue%h%Creset (%Cred%an%Creset) %s'
	l			= log --graph --pretty='%Cgreen%ar%Creset %Cblue%h%Creset (%Cred%an%Creset) %s'
	la			= log --all --graph --pretty='%Cgreen%ar%Creset %Cblue%h%Creset (%Cred%an%Creset)%C(yellow)%d%Creset %s'
	loggpa		= log --all --graph --pretty='%Cgreen%ar%Creset %Cblue%h%Creset (%Cred%an%Creset)%C(yellow)%d%Creset %s'
	m			= merge
	ma			= merge --abort
[core]
	excludesfile = ~/.gitignore
[pull]
    rebase = true
[push]
	default = simple
[diff]
	algorithm = patience
