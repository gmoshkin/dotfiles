#!/usr/bin/env bash

source ~/dotfiles/tmux-powerlinerc

if [ "$1" == volume ]; then
    COMMAND="~/dotfiles/scripts/volume.sh $2"
else
    COMMAND="cmus-remote $@"
fi

if [ "$(cat /tmp/tmux-powerline_$USER/cmus_mode.txt 2>/dev/null)" == "remote" ]; then
    ssh "$TMUX_POWERLINE_SEG_NOW_PLAYING_CMUS_REMOTE_HOST" "$COMMAND"
else
    echo $COMMAND | bash
fi
